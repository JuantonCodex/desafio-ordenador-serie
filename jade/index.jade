    include ./includes/mensaje.jade
    .MainWrapper
      header.Header
        .Header-content
          h1.Header-title Ordenador de serie
      section.Content
        .description Ingresa cualquier número.
        form.frm_ingresar(action="", method="post")
          input.ipt_numero(type="text", name="ipt_numero", placeholder="", maxlength="3")
          input.ipt_btn_ingresar(type="submit", value="Ingresar")
